{
  "name": "ald-system",
  "displayName": "ALD System",
  "version": "1.3.2",
  "description": "Autonomous Learning & Development system with 155 validated policies, persistent memory, sprint management, E2E testing, continuous learning, and intelligent code review.",
  "author": {
    "name": "dirgogoo",
    "url": "https://github.com/dirgogoo"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dirgogoo/ald-system.git"
  },
  "homepage": "https://github.com/dirgogoo/ald-system#readme",
  "bugs": {
    "url": "https://github.com/dirgogoo/ald-system/issues"
  },
  "license": "MIT",
  "keywords": [
    "ai-development",
    "code-policies",
    "autonomous-learning",
    "memory-system",
    "sprint-management",
    "e2e-testing",
    "code-review",
    "policy-driven",
    "tdd",
    "continuous-improvement"
  ],
  "main": "SKILL.md",
  "claudeCode": {
    "minVersion": "0.8.0",
    "skills": [
      {
        "name": "ald-memory",
        "path": "skills/ald-memory/SKILL.md",
        "description": "Persistent memory across conversations"
      },
      {
        "name": "ald-policies",
        "path": "skills/ald-policies/SKILL.md",
        "description": "155 validated development policies"
      },
      {
        "name": "ald-curator",
        "path": "skills/ald-curator/SKILL.md",
        "description": "Pattern detection and learning"
      },
      {
        "name": "ald-tester",
        "path": "skills/ald-tester/SKILL.md",
        "description": "E2E validation as end user"
      },
      {
        "name": "ald-orchestrator",
        "path": "skills/ald-orchestrator/SKILL.md",
        "description": "Workflow coordination"
      },
      {
        "name": "ald-sprint",
        "path": "skills/ald-sprint/SKILL.md",
        "description": "Sprint management with scope isolation"
      },
      {
        "name": "ald-policy-finder",
        "path": "skills/ald-policy-finder/SKILL.md",
        "description": "Intelligent policy search"
      },
      {
        "name": "ald-code-reviewer",
        "path": "skills/ald-code-reviewer/SKILL.md",
        "description": "Code review with policy validation"
      }
    ]
  },
  "install": {
    "target": "~/.claude/skills/ald-system/",
    "files": [
      {
        "source": "SKILL.md",
        "destination": "~/.claude/skills/ald-system/SKILL.md"
      },
      {
        "source": "CLAUDE.md",
        "destination": "~/.claude/CLAUDE.md"
      },
      {
        "source": "skills/",
        "destination": "~/.claude/skills/ald-system/skills/"
      }
    ],
    "postInstall": "ALD System ready! Start any development task and ALD will automatically activate."
  }
}
